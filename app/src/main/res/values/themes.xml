<resources>
    <!-- Base application theme. -->
    <style name="Theme.MeMovie" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MeMovie.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MeMovie.NoSplashScreen">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.MeMovie.MyActionButtonStyle">
        <item name="android:minWidth">20dip</item>
        <item name="android:padding">0dip</item>
    </style>

    <style name="TextH2">
        <item name="android:textColor">@color/blue_white_300</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text22</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="TextH3">
        <item name="android:textColor">@color/blue_white_300</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text20</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="TextH5">
        <item name="android:textSize">@dimen/text14</item>
        <item name="android:textColor">@color/blue_white_300</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
    </style>

    <style name="TextContext">
        <item name="android:textColor">@color/blue_white_300</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
    </style>
    <style name="TextContextLight">
        <item name="android:textColor">@color/blue_white_300</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>
    <style name="RoundedBottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/rounded_corner_background_white</item>
    </style>
    <style name="BaseBottomSheetRoundedDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>

        <item name="bottomSheetStyle">@style/RoundedBottomSheet</item>
    </style>

    <style name="BottomSheetRoundedDialogTheme" parent="BaseBottomSheetRoundedDialog" />
</resources>